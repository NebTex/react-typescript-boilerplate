{
  "name": "react-typescript-boilerplate",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server --progress --inline --hot",
    "fix-types": "rm -rf node_modules/@types/reactstrap&&ln -s `pwd`/types/reactstrap `pwd`/node_modules/@types/reactstrap",
    "fix-fuse": "node scripts/fuseFix.js",
    "postinstall": "yarn fix-types && yarn fix-fuse",
    "test": "jest",
    "storybook": "node scripts/storybook.js && start-storybook -p 6006"
  },
  "devDependencies": {
    "@types/classnames": "^0.0.32",
    "@types/fuse": "^2.5.1",
    "@types/node": "^7.0.4",
    "@types/react": "^15.0.4",
    "@types/react-dom": "^0.14.21",
    "@types/react-infinite": "^0.0.29",
    "@types/react-test-renderer": "^15.4.2",
    "css-loader": "^0.26.1",
    "dummy-json": "^2.0.0",
    "jest": "^18.1.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.3.0",
    "react-addons-test-utils": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "resolve-url-loader": "^1.6.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "ts-jest": "^18.0.2",
    "ts-loader": "^2.0.0",
    "typescript": "^2.1.5",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "@kadira/storybook": "^2.35.3",
    "@types/enzyme": "^2.7.2",
    "@types/jest": "^18.1.0",
    "bootstrap": "4.0.0-alpha.6",
    "classnames": "^2.2.5",
    "enzyme": "^2.7.1",
    "font-awesome": "^4.7.0",
    "fuse.js": "^2.6.1",
    "identity-obj-proxy": "^3.0.0",
    "mobx": "^3.0.2",
    "mobx-react": "^4.1.0",
    "mobx-react-devtools": "^4.2.11",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-infinite": "^0.10.0",
    "react-markdown": "^2.4.4",
    "reactstrap": "^4.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(scss)$": "identity-obj-proxy"
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
