{
  "name": "react-typescript-boilerplate",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server --progress --inline --hot",
    "fix-types": "rm -rf node_modules/@types/reactstrap&&ln -s `pwd`/types/reactstrap `pwd`/node_modules/@types/reactstrap",
    "postinstall": "yarn fix-types",
    "test": "jest"
  },
  "devDependencies": {
    "@types/classnames": "^0.0.32",
    "@types/node": "^7.0.4",
    "@types/react": "^15.0.4",
    "@types/react-dom": "^0.14.21",
    "@types/react-test-renderer": "^15.4.2",
    "css-loader": "^0.26.1",
    "jest": "^18.1.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.3.0",
    "react-addons-test-utils": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "resolve-url-loader": "^1.6.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "ts-jest": "^18.0.2",
    "ts-loader": "^2.0.0",
    "typescript": "^2.1.5",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "@kadira/storybook": "^2.35.3",
    "@types/enzyme": "^2.7.2",
    "bootstrap": "4.0.0-alpha.6",
    "classnames": "^2.2.5",
    "enzyme": "^2.7.1",
    "font-awesome": "^4.7.0",
    "mobx": "^3.0.2",
    "mobx-react": "^4.1.0",
    "mobx-react-devtools": "^4.2.11",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-markdown": "^2.4.4",
    "reactstrap": "^4.0.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
