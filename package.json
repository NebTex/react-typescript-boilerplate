{
  "name": "react-typescript-boilerplate",
  "scripts": {
    "build": "webpack --config ./webpack.production.js --progress",
    "start": "webpack-dev-server --config ./webpack.dev.js",
    "build:landing": "webpack --config ./webpack.landing.prod.js --progress",
    "start:landing": "webpack-dev-server --config ./webpack.landing.dev.js",
    "fix-types": "bash ./scripts/fixTypes.sh",
    "fix-fuse": "node scripts/fuseFix.js",
    "postinstall": "yarn fix-types && yarn fix-fuse",
    "test": "jest -i",
    "storybook": "node scripts/storybook.js && start-storybook -p 6006"
  },
  "devDependencies": {
    "@types/classnames": "^0.0.32",
    "@types/es6-promise": "^0.0.32",
    "@types/es6-shim": "^0.31.32",
    "@types/fetch-mock": "^5.8.0",
    "@types/fuse": "^2.5.1",
    "@types/isomorphic-fetch": "^0.0.33",
    "@types/node": "^7.0.4",
    "@types/react": "^15.0.4",
    "@types/react-dom": "^0.14.21",
    "@types/react-infinite": "^0.0.29",
    "@types/react-json-pretty": "^1.3.1",
    "@types/react-scroll": "^0.0.31",
    "@types/react-test-renderer": "^15.4.2",
    "awesome-typescript-loader": "^3.1.2",
    "babili-webpack-plugin": "^0.0.11",
    "codecov": "^1.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "dummy-json": "^2.0.0",
    "fetch-mock": "^5.9.4",
    "jest": "^18.1.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.3.0",
    "react-addons-test-utils": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "resolve-url-loader": "^1.6.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "ts-jest": "^18.0.2",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "@kadira/storybook": "^2.35.3",
    "@nebtex/hashmap": "^1.0.2",
    "@types/core-js": "^0.9.35",
    "@types/enzyme": "^2.7.2",
    "@types/history": "^4.5.0",
    "@types/jest": "^18.1.0",
    "@types/react-addons-css-transition-group": "^15.0.1",
    "@types/react-addons-transition-group": "^0.14.19",
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "enzyme": "^2.7.1",
    "es6-promise": "^4.0.5",
    "es6-promises": "^1.0.10",
    "es6-shim": "^0.35.3",
    "fetch-intercept": "^2.2.3",
    "font-awesome": "^4.7.0",
    "fuse.js": "^2.6.1",
    "identity-obj-proxy": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "mobx": "^3.0.2",
    "mobx-react": "^4.1.0",
    "mobx-react-devtools": "^4.2.11",
    "mobx-router": "^0.0.7",
    "preact": "^7.2.0",
    "preact-compat": "^3.13.1",
    "rc-css-transition-group": "^2.1.4",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-infinite": "^0.10.0",
    "react-json-pretty": "^1.5.0",
    "react-markdown": "^2.4.4",
    "react-monaco-editor": "^0.7.3",
    "react-scroll": "^1.4.8",
    "reactstrap": "^4.3.0",
    "xhook": "^1.4.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/api"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(scss)$": "identity-obj-proxy"
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "automock": false
  }
}
